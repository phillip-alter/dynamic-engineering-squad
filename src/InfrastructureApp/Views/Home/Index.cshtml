@{
    ViewData["Title"] = "Mission Control";
}

<div class="text-center mb-5">
    <h1 class="display-4 fw-bold">Welcome back, Pathfinder.</h1>
    <p class="lead text-muted">The city infrastructure is crumbling. Time to grind some XP.</p>
</div>

<div class="text-center mb-4">
    <a href="/Leaderboard" class="btn btn-success btn-lg fw-bold">
        <i class="fa-solid fa-trophy me-2"></i> View Leaderboard
    </a>
</div>


<div class="row text-center mb-5">
    <div class="col-md-6 mb-3">
        <div class="card bg-dark text-white border-info h-100 shadow-lg">
            <div class="card-body d-flex flex-column justify-content-center align-items-center p-5">
                <i class="fa-solid fa-camera fa-4x mb-3 text-info"></i>
                <h2 class="card-title">Report Issue</h2>
                <p class="card-text">Spot a pothole or broken light? Snap it, tag it, claim the bounty.</p>
                <a href="/ReportIssue/Create" class="btn btn-lg btn-info mt-auto fw-bold">Start Quest</a>
            </div>
        </div>
    </div>
    <div class="col-md-6 mb-3">
        <div class="card bg-dark text-white border-warning h-100 shadow-lg">
            <div class="card-body d-flex flex-column justify-content-center align-items-center p-5">
                <i class="fa-solid fa-check-double fa-4x mb-3 text-warning"></i>
                <h2 class="card-title">Verify Fixes</h2>
                <p class="card-text">Confirm repairs made by the city to earn Reputation Points.</p>
                <a href="/Reports/Verify" class="btn btn-lg btn-warning mt-auto fw-bold text-dark">Verify Now</a>
            </div>
        </div>
    </div>
</div>

<h3 class="border-bottom pb-2 mb-3"><i class="fa-solid fa-rss"></i> Recent Activity in Your Zone</h3>
<div class="list-group">
    <a href="#" class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
        <div class="d-flex align-items-center justify-content-center bg-light rounded-circle" style="width: 50px; height: 50px; flex-shrink: 0;">
             <i class="fa-solid fa-road text-dark fs-4"></i>
        </div>
        <div class="d-flex gap-2 w-100 justify-content-between">
            <div>
                <h6 class="mb-0">Massive Pothole on Main St.</h6>
                <p class="mb-0 opacity-75">Reported by <strong>xX_StreetFixer_Xx</strong> • <span class="badge bg-danger">Critical</span></p>
            </div>
            <small class="opacity-50 text-nowrap">2m ago</small>
        </div>
    </a>

    <a href="#" class="list-group-item list-group-item-action d-flex gap-3 py-3">
        <div class="d-flex align-items-center justify-content-center bg-light rounded-circle" style="width: 50px; height: 50px; flex-shrink: 0;">
             <i class="fa-solid fa-lightbulb text-dark fs-4"></i>
        </div>
        <div class="d-flex gap-2 w-100 justify-content-between">
            <div>
                <h6 class="mb-0">Streetlight Outage - Sector 7</h6>
                <p class="mb-0 opacity-75">Status changed to <span class="badge bg-success">Fixed</span> +500 XP Awarded!</p>
            </div>
            <small class="opacity-50 text-nowrap">1h ago</small>
        </div>
    </a>
</div>