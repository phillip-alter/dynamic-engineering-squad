@model InfrastructureApp.ViewModels.LatestReportsViewModel

@{
    ViewData["Title"] = "Latest Reports";
}

<h1 class="mb-3">Latest Reports</h1>

@if (Model.Reports == null || !Model.Reports.Any())
{
    // Show message if there are no reports
    <div class="alert alert-info">
        No reported issues yet.
    </div>
}
else
{
    <div class="list-group">
        @foreach (var r in Model.Reports)
        {
            <button type="button"
                    class="list-group-item list-group-item-action d-flex justify-content-between align-items-start report-item"
                    data-description="@r.Description"        data-created="@r.CreatedAt.ToLocalTime().ToString("f")"
                    data-status="@r.Status">
                <div class="me-3">
                    <div class="fw-bold">@r.Description</div>
                </div>
                <small class="text-muted">
                    @r.CreatedAt.ToLocalTime().ToString("g")
                </small>
            </button>
        }
    </div>
}

<!-- Report Details Modal -->
<div class="modal fade" id="reportModal" tabindex="-1" aria-labelledby="reportModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title" id="reportModalLabel">Report Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <p class="mb-1"><strong>Description</strong></p>
                <p id="modalDescription" class="mb-3"></p>

                <p class="mb-1"><strong>Created</strong></p>
                <p id="modalCreated" class="mb-3"></p>

                <p class="mb-1"><strong>Status</strong></p>
                <p id="modalStatus" class="mb-0"></p>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>