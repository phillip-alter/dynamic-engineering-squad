<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PatchNotes</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
                /* Custom tweaks to make it feel less like a tax form and more like a game */
                .navbar-brand {
                    font-weight: bold;
                    letter-spacing: 1px;
                    color: #00d4ff !important;
                }
                .xp-bar {
                    height: 4px;
                    width: 100px;
                    background: #333;
                    display: inline-block;
                    vertical-align: middle;
                    margin-left: 10px;
                }

                .xp-fill {
                    height: 100%;
                    background: #00ff00;
                    width: 75%;
                }

                /* Hardcoded 75% for demo */
                .user-level-badge {
                    background: #ff0055;
                    color: white;
                    border-radius: 50%;
                    padding: 5px 10px;
                    font-size: 0.8rem;
                }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark border-bottom border-secondary">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">
                    <i class="fa-solid fa-city"></i> PatchNotes
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#gameMenu"
                        aria-controls="gameMenu" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="gameMenu">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" href="/Home/Index"><i class="fa-solid fa-map"></i>Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Reports/Latest"><i class="fa-solid fa-scroll"></i>Latest
                                Reports</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Achievements"><i class="fa-solid fa-medal"></i>Badges</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="ReportIssue" asp-action="ReportIssue"><i class="fa fa-car"></i>Report Issue</a>
                            </li>
                        </ul>

                        <ul class="navbar-nav d-flex align-items-center text-light gap-3">
                            @* <div class="d-none d-lg-block">
                            <span class="user-level-badge">Lvl 14</span>
                            <span class="ms-2">XP:</span>
                            <div class="xp-bar"><div class="xp-fill"></div></div>
                        </div> *@
                            <li class="nav-item d-flex align-items-center">
                                <div id="google_translate_element"></div>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-light" asp-controller="Account" asp-action="Login">
                                    Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-controller="Account" asp-action="Register">
                                    Register
                                </a>
                            </li>
                            @* <div class="dropdown">
                            <a class="nav-link dropdown-toggle text-light" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa-solid fa-user-astronaut"></i> PlayerOneZeroOne
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end dropdown-menu-dark">
                                <li><a class="dropdown-item" href="/Profile">Character Sheet (Profile)</a></li>
                                <li><a class="dropdown-item" href="/Settings">Config</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-danger" href="/Account/Logout">Log Out</a></li>
                            </ul>
                        </div> *@
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        <div class="container mt-4">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>


        <footer class="border-top border-secondary text-muted mt-5">
            <div class="container py-3 d-flex justify-content-between align-items-center">
                <span>&copy; @DateTime.Now.Year - PatchNotes</span>
                <a asp-controller="Home" asp-action="Privacy" class="text-decoration-none text-muted">
                    Privacy Policy
                </a>
                 <a asp-controller="Home" asp-action="About" class="text-decoration-none text-muted">About</a>
            </div>
        </footer>

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

        @await RenderSectionAsync(name: "Scripts", required: false)

        <!-- Google Translate initialization -->
        <script>
            function googleTranslateElementInit() {
                new google.translate.TranslateElement(
                    {
                        pageLanguage: 'en',
                        includedLanguages: 'en,es,zh-CN',
                        layout: google.translate.TranslateElement.InlineLayout.SIMPLE,
                        autoDisplay: false
                    },
                    'google_translate_element'
                );
            }
        </script>

        <!-- Google Translate loader -->
        <script src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
    </body>

</html>