@model InfrastructureApp.ViewModels.ReportIssueViewModel
@{
    ViewData["Title"] = "Submit Issue";
}

<div class="container py-4">
    <h1 class="h3 mb-3">Issue Submission Form</h1>

    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <form asp-action="Create" asp-controller="ReportIssue" method="post">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description"
                      class="form-control"
                      rows="4"
                      aria-label="Issue description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="row g-3">
            <div class="col-12 col-md-6">
                <label asp-for="Latitude" class="form-label"></label>
                <input asp-for="Latitude" class="form-control" aria-label="Latitude" />
                <span asp-validation-for="Latitude" class="text-danger"></span>
            </div>

            <div class="col-12 col-md-6">
                <label asp-for="Longitude" class="form-label"></label>
                <input asp-for="Longitude" class="form-control" aria-label="Longitude" />
                <span asp-validation-for="Longitude" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3 mt-3">
            <label asp-for="ImageUrl" class="form-label"></label>
            <input asp-for="ImageUrl" class="form-control" aria-label="Image URL" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>

        <button type="submit"
                class="btn report-action-btn report-action-btn--primary"
                aria-label="Submit the issue report">
            Submit
        </button>

        <a class="btn report-action-btn ms-2"
           asp-action="ReportIssue"
           aria-label="Cancel and return to report issue page">
            Cancel
        </a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
