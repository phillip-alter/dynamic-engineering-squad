@model InfrastructureApp.ViewModels.ReportIssueViewModel
@{
    ViewData["Title"] = "Submit Issue";
}

<div class="container py-4">
    <h1 class="h3 mb-3">Issue Submission Form</h1>

    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <form asp-action="Create" asp-controller="ReportIssue" method="post" enctype="multipart/form-data">   <!--enctype is required for photo uploads-->
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description"
                      id="Description"
                      class="form-control"
                      maxlength="300"
                      rows="4"
                      placeholder="Describe the infrastructure issue here. Add a clear description and the location. (300 charactes max)"
                      aria-label="Issue description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
            <div class="form-text">
                <span id="descCount">0</span>/300
            </div>
        </div>

        <div class="mb-3 mt-3">
            <label asp-for="Photo" class="form-label"></label>
            <input asp-for="Photo" type="file" class="form-control" accept="image/*" />
            <span asp-validation-for="Photo" class="text-danger"></span>
        </div>

        <button type="submit"
                class="btn report-action-btn report-action-btn--primary"
                aria-label="Submit the issue report">
            Submit
        </button>

        <a class="btn report-action-btn ms-2"
           asp-action="ReportIssue"
           aria-label="Cancel and return to report issue page">
            Cancel
        </a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/reportIssue.js"></script>
}

