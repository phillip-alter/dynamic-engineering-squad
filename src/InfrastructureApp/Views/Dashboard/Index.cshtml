@model InfrastructureApp.ViewModels.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<h1>Dashboard</h1>

<div class="row">
    <div class="col-md-6 mb-3">
        <div class="card">
            <div class="card-header">
                Personal Information
            </div>
            <div class="card-body">
                <p><strong>Username:</strong> @Model.Username</p>
                <p><strong>Email:</strong> @Model.Email</p>
            </div>
        </div>
    </div>

    <div class="col-md-6 mb-3">
        <div class="card">
            <div class="card-header">
                Activity Summary
            </div>
            <div class="card-body">
                <p><strong>Reports submitted:</strong> @Model.ReportsSubmitted</p>
                <p><strong>Points:</strong> @Model.Points</p>
                <p class="text-muted mb-0">
                    Points displayed may use seeded or placeholder data for now.
                </p>
            </div>
        </div>
    </div>
</div>